# Use a Debian-based image instead of Alpine
FROM python:3.12-slim AS dev

WORKDIR /app

# Install dependencies for Flask hot reloading
RUN apt-get update && apt-get install -y gcc libffi-dev inotify-tools && rm -rf /var/lib/apt/lists/*

# Set environment variables for development
ENV FLASK_APP=app.py
ENV FLASK_ENV=development
ENV FLASK_DEBUG=1
ENV FLASK_RUN_EXTRA_FILES=/app
ENV PYTHONUNBUFFERED=1

# Install Python dependencies
COPY requirements.txt /app/
RUN pip install --no-cache-dir -r requirements.txt

# Copy application files
COPY . /app/

# Expose the development server port
EXPOSE 5000

# Run Flask in development mode with hot reloading
CMD ["flask", "run", "--host=0.0.0.0", "--port=5000", "--debug", "--reload"]
